---
import AnimatedFadeInImage from "../components/Animation/AnimatedFadeInImage.jsx";
import AnimateImageVW from "../components/Animation/AnimatedImageVW";
import AnimatedSlideInButton from "../components/Animation/AnimatedSlideInButton";
import AnimatedText from "../components/Animation/AnimatedText";
import AnimatedTitle from "../components/Animation/AnimatedTitle";
import TitleTransition from "../components/Animation/TitleTransition.jsx";
import Layout from '../layouts/Layout.astro';
import '../styles/index.css';

---



<Layout>  
  <section class="content">
    
    <TitleTransition
      title="Welcome to Staffer"
      titleClass="first-title"
      icon="▼"
      iconClass="scroll-icon"
      client:idle
    />

    <TitleTransition
      title="Boost Your Vision"
      titleClass="second-title"
      icon="▼"
      iconClass="scroll-icon"
      client:load
    />
    

    <AnimatedFadeInImage 
        src="/images/Staffer_Header_V2.png" 
        alt="Descriptive image"
        className="full-width-image"
        client:load
    />

    <!-- Imagen de ancho completo <img src="/images/Staffer_Header_V2.png" alt="Staffer Header" class="full-width-image"> -->

    <h3 class="info-redirect-contact">
      <AnimatedTitle text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla facilisi. Fusce auctor lacus at sapien tincidunt, nec varius metus rhoncus. Integer auctor, odio ac suscipit congue consequat." client:idle />
    </h3>
    
    <AnimatedSlideInButton 
                text="CONTACT US" 
                href='/contact'
                className="button-secondSection" 
                client:load/> 

    <!-- Contenedor de imagen y texto -->
    <div class="image-text-container">
        <AnimateImageVW 
        src="/images/STAFFER_AD_2.28.png"  
        alt="Staffer" 
        className="rounded-image" 
        client:load/>

        <AnimatedText 
        text="Innovation starts here. With tools designed to enhance your productivity and strengthen your connections, Staffer takes you to the next level."
        className="side-text"
        client:load/>
    </div>
  </section>
</Layout>
