---
export interface Props {
  imageSrc: string;
  imageAlt?: string;
  title?: string;
  description?: string;
}

const { imageSrc, imageAlt = '', title = '', description = '' } = Astro.props;
---

<div class="card">
  <div class="card-image">
    <img src={imageSrc} alt={imageAlt} class="card-img" />
  </div>
  <div class="card-content">
    {title && <h3 class="card-title">{title}</h3>}
    {description && <p class="card-description">{description}</p>}
  </div>
</div>

<style>
  .card {
    border-radius: 20px; /* Bordes más redondeados */
    overflow: hidden;
    background-color: #fff;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    max-width: 400px; /* Tarjeta más ancha */
    margin: 0 auto;
  }

  .card:hover {
    transform: translateY(-5px);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
  }

  .card-image {
    width: 100%;
    height: 300px; /* Imagen más grande */
    overflow: hidden;
  }

  .card-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .card-content {
    padding: 1.5rem; /* Más espacio interno */
    text-align: center;
  }

  .card-title {
    font-size: 1.5rem; /* Título más grande */
    margin-bottom: 1rem;
    color: #333;
    font-weight: bold; /* Título en negrita */
  }

  .card-description {
    font-size: 1rem; /* Descripción más grande */
    color: #666;
    line-height: 1.5; /* Mejor espaciado entre líneas */
  }
</style>