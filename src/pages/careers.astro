---
import AnimatedFadeInImage from "../components/Animation/AnimatedFadeInImage";
import AnimatedSlideInButton from "../components/Animation/AnimatedSlideInButton";
import AnimatedSlideInText from "../components/Animation/AnimatedSlideInText";
import AnimatedTitle from "../components/Animation/AnimatedTitle";
import Layout from '../layouts/Layout.astro';
import "../styles/careers.css";
---

<head>
    <title>Staffer | Careers</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=EB+Garamond:wght@400;700&display=swap" rel="stylesheet">
</head>
<Layout>
    <body>
        <!-- Primera sección -->
        <section class="first-section">
            <div class="content-wrapper">
                <h1 class="title">
                    <AnimatedTitle text="Current Openings" delay={0} typingSpeed={20} client:idle />
                </h1>
            </div>
        </section>

        <!-- Segunda sección -->
        <section class="second-section">
            <div class="second-section-wrapper">
                <div class="second-container">
                    <h2 class="second-title">
                        <AnimatedSlideInText text={"Oops, we haven't updated our jobs yet! Check our LinkedIN page for updated postings!"} client:load />
                    </h2>
                    <AnimatedSlideInButton text="BACK" href='/' className="button-secondSection" delay={0} client:load />
                </div>
            </div>
        </section>
    </body>
</Layout>